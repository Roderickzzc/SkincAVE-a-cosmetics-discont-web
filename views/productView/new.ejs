<% layout('/layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Product</h1>
        <div class="col-6 offset-3">
            <form action="/products" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Product Name</label>
                    <input class="form-control" type="text" id="name" name="product[name]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="brand">Brand</label>
                    <input class="form-control" type="text" id="brand" name="product[brand]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="category">Category</label>
                    <input class="form-control" type="text" id="category" name="product[category]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="originPrice">Original Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="originPrice-label">$</span>
                        <input type="text" class="form-control" id="originPrice" placeholder="0.00"
                            aria-label="originPrice" aria-describedby="originPrice-label" name="product[originPrice]">
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="originPrice">Original Price</label>
                    <input class="form-control" type="text" id="originPrice" name="product[originPrice]">
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="ml">Volume</label>
                    <input class="form-control" type="text" id="ml" name="product[ml]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="lowestPrice">Lowest Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="lowestPrice-label">$</span>
                        <input type="text" class="form-control" id="lowestPrice" placeholder="0.00"
                            aria-label="lowestPrice" aria-describedby="lowestPrice-label" name="product[lowestPrice]">
                    </div>
                </div>
                <!-- <div class="mb-3">
                        <label class="form-label" for="lowestPrice">Lowest Price</label>
                        <input class="form-control" type="text" id="lowestPrice" name="product[lowestPrice]">
                    </div> -->
                <div class="mb-3">
                    <label class="form-label" for="lowestPerMl">Lowest Price Per ML</label>
                    <input class="form-control" type="text" id="lowestPerMl" name="product[lowestPerMl]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="product[image]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="product[description]"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Product</button>
                </div>
            </form>
            <a href="/products">All Products</a>
        </div>
    </div>

