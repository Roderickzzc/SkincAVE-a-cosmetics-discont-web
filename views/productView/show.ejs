<% layout('/layouts/boilerplate')%>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= product.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= product.name %>
                    </h5>
                    <p class="card-text">
                        <%= product.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Made by <%= product.brand %>
                    </li>
                    <li class="list-group-item">Origin Price: $<%= product.originPrice %>/<%= product.ml %>ml
                    </li>
                    <li class="list-group-item">Lowest Price: $<%= product.lowestPrice %>
                    </li>
                    <li class="list-group-item">Lowest Price Per ML: $<%= product.lowestPerMl %>
                    </li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/products/<%= product._id %>/edit">Edit</a>
                    <form class="d-inline" action="/products/<%= product._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <a href="/products">All Products</a>
                </div>
            </div>
        </div>
    </div>

